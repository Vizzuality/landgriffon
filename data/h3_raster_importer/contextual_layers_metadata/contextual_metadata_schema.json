{
    "$defs": {
        "code": {
            "type": "array",
            "description": "The mapping between layer values and meaning of the value. Used to show in the legend of the layer",
            "items": {
                "type": "object",
                "properties": {
                    "value": {
                        "type": "number",
                        "description": "The actual data value"
                    },
                    "label": {
                        "type": "string",
                        "description": "The label of the code to show in the legend"
                    }
                }
            }
        }
    },
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the layer"
        },
        "description": {
            "type": "string",
            "description": "The description of the layer. Typically, the description of the feature column used. Used as body of the layer information to give context to the user"
        },
        "legend": {
            "type": "object",
            "description": "The legend of the layer",
            "properties": {
                "code": {
                    "$ref": "#/$defs/code"
                }
            }
        },
        "source": {
            "type": "string",
            "description": "The citation of the layer"
        },
        "licence": {
            "type": "string",
            "description": "The licence of the layer"
        }
    }
}

